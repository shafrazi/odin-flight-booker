<h1>Book Flight</h1>
<p>Please enter passenger details for booking</p>
<div id="book-flight-details">
  <p><b>Origin : </b><%= airport_name(@flight.from_airport_id) %></p>
  <p><b>Destination : </b><%= airport_name(@flight.to_airport_id) %></p>
  <p><b>Date : </b><%= @flight.start_date %></p>
</div>
<%= form_with(model: @booking, local: true) do |f| %>
  <%= f.hidden_field :flight_id, value: @flight.id %>
  <div id="passengers">
    <div id="passenger-field">
      <%= f.fields_for(:passengers) do |passenger_form| %>
        <%= render "passenger_fields", f: passenger_form %>
      <% end %>
    </div>
  </div>
  <%= f.submit class: "btn btn-primary"%>
<% end %>
